@model IEnumerable<Euro24Tracker.Types.Ereignis>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Minute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kommentar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spiel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EreignisTyp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TorNation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Torschuetze)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Minute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kommentar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spiel.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EreignisTyp.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TorNation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Torschuetze.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
